	<div class="row">
 	 <div class="col-xs-3">
 	 	<h2>User info</h2>
 	 	<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
 	 	<table class="table">
 	 		<tbody>
 	 			<tr></tr>
 	 			<tr>
 	 			  <th>name</th>
 	 			  <th><%= current_user.name %></th>
 	 			</tr>
 	 			<tr>
  	 			  <th>introduction</th>
 	 			  <th><%= current_user.introduction %></th>
 	 			</tr>
 	 		</tbody>
 	 	</table>
   	   <div class="row">
   	   	<div class="col-xs-12">
          <%= link_to "編集", edit_user_path(current_user), class: 'btn btn-default' %>
