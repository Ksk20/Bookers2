   	   </div>
   	   <h2>New book</h2>
   	
    <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:<br>
        <% @book.errors.full_messages.each do |msg| %>
        <%= msg %><br>
        <% end %>
      <% end %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    <% end %>
	</div>

  <div class="col-xs-9">
	<h2>Books</h2>
    	<table class="table table-striped">
    		<thead>
    			<tr>
    				<th></th>
    				<th>Title</th>
    				<th>Opinion</th>
    			</tr>
    		</thead>
			<% @books.each do |book| %>
    		<tbody>
    			<tr>
    				<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
    				<td><%= link_to book.title, book_path(book.id) %></td>
					 <td><%= book.body %></td>
    			</tr>
    		</tbody>
    		<% end %>
    	</table>
    </div>
  </div>