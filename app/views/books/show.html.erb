
<div class="container">
	<div class="row">
 	 <div class="col-xs-3">
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
 	 	<h2>User info</h2>
 	 	<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
 	 	<table class="table table-striped">
 	 		<tbody>
 	 			<tr></tr>
 	 			<tr>
 	 			  <th>name</th>
 	 			  <th><%= current_user.name %></th>
 	 			</tr>
 	 			<tr>
  	 			  <th>introduction</th>
 	 			  <th><%= current_user.introduction %></th>
 	 			</tr>
 	 		</tbody>
 	 	</table>
          <%= link_to "", edit_user_path(current_user), class: "btn btn-default col-xs-12 glyphicon glyphicon-wrench", aria: {hidden: true} %>
   	   <h2>New book</h2>
   	
    <%= form_for(@book_new) do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    <% end %>
	</div>

  <div class="col-xs-9">
	<h2>Book detail</h2>
    	<table class="table table-striped">
    		<tbody>
    			<tr>
    				<td><%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
              <br><%= current_user.name %>
              <% end %>
              </td>
    				<td><%= link_to @book.title, book_path %></td>
					<td><%= @book.body %></td>
					<td><% if @book.user == current_user %>
 						<%= link_to "Edit", edit_book_path(@book.id) %><% end %>
 					</td>
					<td><% if @book.user == current_user %>
 						<%= link_to "Destroy", book_path(@book), method: :delete %><% end %>
 					</td>
    			</tr>
    		</tbody>
    	</table>
    </div>
  </div>