
<div class="containar">
	<div class="row">
 	 <div class="col-xs-3">
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
 	 	<h2>User info</h2>
 	 	<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
 	 	<table class="table">
 	 		<tbody>
 	 			<tr></tr>
 	 			<tr>
 	 			  <th>name</th>
 	 			  <th><%= current_user.name %></th>
 	 			</tr>
 	 			<tr>
  	 			  <th>introduction</th>
 	 			  <th><%= current_user.introduction %></th>
 	 			</tr>
 	 		</tbody>
 	 	</table>
   	   <div class="row">
   	   	<div class="col-xs-12">
          <%= link_to "編集", edit_user_path(current_user), class: 'btn btn-default' %>
   	    </div>
   	   </div>
   	   <h2>New book</h2>
   	
    <%= form_for(@book_new) do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    <% end %>
	</div>

  <div class="col-xs-9">
	<h2>Book detail</h2>
    	<table class="table table-striped">
    		<tbody>
    			<tr>
    				<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
    				<td><%= link_to @book.title, book_path %></td>
					<td><%= @book.body %></td>
					<td><% if @book.user == current_user %>
 						<%= link_to "Edit", edit_book_path(@book.id) %><% end %>
 					</td>
					<td><% if @book.user == current_user %>
 						<%= link_to "Destroy", book_path(@book), method: :delete %><% end %>
 					</td>
    			</tr>
    		</tbody>
    	</table>
    </div>
  </div>s