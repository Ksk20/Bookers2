<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header" id="header">
      <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Bookers</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
      <li class="active">
        <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", user_path(current_user.id) %></span></li>
      <li>
        <span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to 'Users', users_path %></span></li>
      <li>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to "Books", books_path %></span></li>
      <li>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to "logout", destroy_user_session_path, method: :delete %></span></li>
      <% else %>
      <li class="active">
        <span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to " Home", root_path %></span></li>
      <li>
        <span class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to ' About', home_about_path %></span></li>
      <li>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to " sign up", new_user_registration_path %></span></li>
      <li>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to " login", new_user_session_path %></span></li>
      <% end %>
    </ul>
  </div>
</nav>
    </div>
    <%= yield %>
  </body>
</html>
