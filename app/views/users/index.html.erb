<div class="container">
	<div class="row">
 	 <div class="col-xs-3">
 	 	<h2>User info</h2>
 	 	<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg"%>
 	 	<table class="table table-striped">
 	 		<tbody>
 	 			<tr></tr>
 	 			<tr>
 	 			  <th>name</th>
 	 			  <th><%= current_user.name %></th>
 	 			</tr>
 	 			<tr>
  	 			  <th>introduction</th>
 	 			  <th><%= current_user.introduction %></th>
 	 			</tr>
 	 		</tbody>
 	 	</table>
          <%= link_to "", edit_user_path(current_user), class: "btn btn-default col-xs-12 glyphicon glyphicon-wrench", aria: {hidden: true} %>
   	   <h2>New book</h2>

    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    <% end %>
	</div>

    <div class="col-xs-9">
	<h2>Users</h2>
    	<table class="table table-striped">
    		<thead>
    			<tr>
    				<th>image</th>
    				<th>name</th>
    				<th></th>
    			</tr>
    		</thead>
			<% @users.each do |user| %>
    		<tbody>
    			<tr>
    				<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%></td>
    				<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
    			</tr>
    		</tbody>
    		<% end %>
    	</table>
    </div>
  </div>