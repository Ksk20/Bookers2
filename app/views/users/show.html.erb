<div class="container">
	<div class="row">
 	 <div class="col-xs-3">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
 	 	<h2>User info</h2>

 	 	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
 	 	<table class="table table-striped">
 	 		<tbody>
 	 			<tr></tr>
 	 			<tr>
 	 			  <th>name</th>
 	 			  <th><%= @user.name %></th>
 	 			</tr>
 	 			<tr>
  	 			  <th>introduction</th>
 	 			  <th><%= @user.introduction %></th>
 	 			</tr>
 	 		</tbody>
 	 	</table>

   	   		<%= link_to "", edit_user_path(current_user), class: "btn btn-default col-xs-12 glyphicon glyphicon-wrench", aria: {hidden: true} %>
   	    
   	   <h2>New book</h2>
   	
    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <br><%= f.submit 'Create Book' %>
    <% end %>
	</div>

<div class="col-xs-9">
	<h2>Books</h2>
    	<table class="table table-striped">
    		<thead>
    			<tr>
    				<th></th>
    				<th>Title</th>
    				<th>Opinion</th>
    			</tr>
    		</thead>
			  <% @books.each do |book| %>
    		<tbody>
    			<tr>
    				<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
    				<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
    			</tr>
    		</tbody>
    		<% end %>
    	</table>
    </div>
    </div>
  </div>